########################################
# APP
########################################

APP_NAME="AltoGestor"
APP_ENV=local
APP_KEY=                                  # será gerado com php artisan key:generate
APP_DEBUG=true
APP_URL=http://localhost:8080
SCRIBE_BASE_URL=http://localhost:8080
APP_TIMEZONE=America/Maceio
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

########################################
# LOG
########################################

LOG_CHANNEL=stack
LOG_LEVEL=debug

########################################
# DB - POSTGRES (DOCKER: serviço 'postgres')
########################################

DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=altogestor
DB_USERNAME=altogestor
DB_PASSWORD=altogestor

########################################
# CACHE / SESSÃO / FILA - REDIS
# (DOCKER: serviço 'redis')
########################################

CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

QUEUE_CONNECTION=redis

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

########################################
# BROADCAST / WEBSOCKETS (POR ENQUANTO SIMPLES)
########################################

BROADCAST_DRIVER=log

########################################
# FILESYSTEM / STORAGE
########################################

FILESYSTEM_DISK=local
FILESYSTEM_CLOUD=s3

# S3 / MinIO (DOCKER: serviço 'minio')
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=altogestor
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_ENDPOINT=http://minio:9000

########################################
# MAIL - MAILPIT (DOCKER: serviço 'mailpit')
########################################

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@altogestor.test"
MAIL_FROM_NAME="${APP_NAME}"

########################################
# HORIZON
########################################

HORIZON_DOMAIN=null
HORIZON_PATH=horizon
HORIZON_USE_AUTH=false            # em prod podemos proteger com auth / gate

########################################
# QUEUE / JOBS (AJUSTES GERAIS)
########################################

# Fila padrão já está como redis acima.
# Se quisermos separar filas no futuro:
# QUEUE_CONNECTION=redis
# QUEUE_DEFAULT=default

########################################
# SANCTUM / FRONTEND (AJUSTAR QUANDO TIVER O FRONT DEFINIDO)
########################################

SESSION_DOMAIN=localhost
SANCTUM_STATEFUL_DOMAINS=localhost:8080

########################################
# OUTROS (OPCIONAIS / RESERVADOS)
########################################

# RATE LIMITS
API_RATE_LIMIT=60

# TIMEZONE / INTERNACIONALIZAÇÃO EXTRA (SE QUISER USAR EM CÓDIGO)
APP_CURRENCY=BRL
